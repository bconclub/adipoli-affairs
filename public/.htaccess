# Enable Rewrite Engine
RewriteEngine On

# Allow access to all files and directories (prevent 403 errors)
Options -Indexes +FollowSymLinks +ExecCGI

# Allow all file types to be accessed
<FilesMatch "\.(html|htm|js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Set default index file
DirectoryIndex index.html

# Explicitly handle /admin route
RewriteCond %{REQUEST_URI} ^/admin/?$
RewriteCond %{DOCUMENT_ROOT}/admin.html -f
RewriteRule ^admin/?$ /admin.html [L]

# Explicitly handle /menu route
RewriteCond %{REQUEST_URI} ^/menu/?$
RewriteCond %{DOCUMENT_ROOT}/menu.html -f
RewriteRule ^menu/?$ /menu.html [L]

# Explicitly handle /tv route
RewriteCond %{REQUEST_URI} ^/tv/?$
RewriteCond %{DOCUMENT_ROOT}/tv.html -f
RewriteRule ^tv/?$ /tv.html [L]

# Handle Next.js static export routes - serve .html files without extension
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/([^/]+)/?$
RewriteCond %{DOCUMENT_ROOT}/%1.html -f
RewriteRule ^([^/]+)/?$ /$1.html [L]

# Handle subdirectories - serve index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.html -f
RewriteRule ^(.*)$ $1/index.html [L]

# Fallback: For any other route, serve index.html (client-side routing)
# This handles missing files gracefully
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/index.html$
RewriteCond %{REQUEST_URI} !\.(png|jpg|jpeg|gif|svg|ico|css|js|woff|woff2|ttf|eot|json)$
RewriteRule ^(.*)$ /index.html [L]

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set proper MIME types
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType text/css css
    AddType image/svg+xml svg
    AddType application/json json
    AddType image/png png
    AddType image/jpeg jpg jpeg
    AddType image/gif gif
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Custom error pages (optional - helps with debugging)
ErrorDocument 404 /index.html
ErrorDocument 403 /index.html
